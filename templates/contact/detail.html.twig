{% extends "base.html.twig" %}

{% block tiltle %}Détail du contact{% endblock %}

{% block body %}

    <div class="row justify-content-center">
        <div class="col-12">
            <h3 class="text-center">Détail du contact</h3>
        </div>

        <div class="card border-info m-3 mt-5" style="max-width: 40rem;">
            <div class="card-header"> {{contact.firstName}} {{contact.name}} </div>
            <div class="card-body">
                <h4 class="card-title">tel : {{contact.phoneNumber}} </h4>
                
            </div>
            <div class="card-footer"> Contact créé le : {{contact.createdAt | date('d:m:Y')}} </div>
            <div class="d-flex justify-content-center">
            
            <a href=" {{path('contact_supprimer', {'id': contact.id } )}} " class="btn btn-danger m-2 mt-3 px-3 " style="max-width: 14rem;">Supprimer Contact</a>
            </div>
        </div>
    
    </div>


{% endblock %}