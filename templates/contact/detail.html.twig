{% extends "base.html.twig" %}

{% block tiltle %}Détail du contact{% endblock %}

{% block body %}

    <a href=" {{path("contact_liste")}} ">< retour à la liste</a>
    <div class="row justify-content-center">
        <div class="col-12">
            <h3 class="text-center">Détail du contact</h3>
        </div>

        <div class="card border-info m-3 mt-5" style="max-width: 40rem;">
            <div class="card-header"><i class="far fa-user mr-3"></i>  {{contact.firstName}} {{contact.name}} </div>

            <div class="card-body">
                <h4 class="card-title"><i class="fas fa-phone-alt "></i> : {{contact.phoneNumber}} </h4>
                
            </div>
            <div class="card-footer"> Contact créé le : {{contact.createdAt | date('d:m:Y')}} </div>
            
            
            {% if app.user %}

                {% if app.user.roles[0] is same as "ROLE_ADMIN" %}

                    <div class="d-flex justify-content-center">
                         <a href=" {{path('contact_supprimer', {'id': contact.id } )}} " class="btn btn-danger m-2 mt-3 px-3 " style="max-width: 14rem;">Supprimer Contact</a>
                         <a href=" {{path('contact_edit', {'id': contact.id } )}} " class="btn btn-info m-2 mt-3 px-3 " style="max-width: 14rem;">Modifier Contact</a>
                     </div>

                {% endif %}
            
            {% endif %}
            
        </div>
    
    </div>


{% endblock %}